CREATE TABLE USER (
    UID INTEGER AUTO_INCREMENT,
    FULL_NAME VARCHAR(100),
    PRIMARY KEY (UID)
    );

CREATE TABLE CUSTOMER (
    UID INTEGER AUTO_INCREMENT,
    FULL_NAME VARCHAR(100),
    CREATOR INTEGER,
    PRIMARY KEY (UID),
    CONSTRAINT customer_user_fk FOREIGN KEY (CREATOR) REFERENCES USER(UID)
    );


INSERT INTO USER (FULL_NAME) VALUES ('root');
